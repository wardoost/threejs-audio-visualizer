include mixins

-var websiteTitle = "WebVR" //- Custom website title
-var metaDescription = "A web-based VR experience that works well in both Google Cardboard and Oculus Rift."; //- Keep between 150 and 160 characters
-var metaKeywordsGlobal = "oink,web,vr,oculus,rift,google,cardboard,3d,threejs"; //- Global and page keywords should contain relevant keywords (max 20)

block vars

doctype html
html(lang="en")

  head
    meta(charset="utf-8")
    meta(http-equiv="X-UA-Compatible" content="IE=edge")
    meta(http-equiv="Content-Type" content="text/html; charset=utf-8")
    meta(name="viewport" content="width=device-width, user-scalable=no, minimum-scale=1.0, maximum-scale=1.0")
    meta(name="mobile-web-app-capable" content="yes")
    meta(name="apple-mobile-web-app-capable" content="yes")
    meta(name="apple-mobile-web-app-status-bar-style" content="black-translucent")
    meta(name="author" content="OÃ¯nk BVBA")


    //----------------------------------------------
    //- Meta and title tags, link to sitemap important for SEO
    //----------------------------------------------
    meta(name="description" content=metaDescription)
    meta(name="robots" content="index, follow")
    meta(name="revisit-after" content="3 month")

    if metaKeywordsGlobal && metaKeywordsPage
      meta(name="keywords" content=metaKeywordsGlobal + "," + metaKeywordsPage)
    else if metaKeywordsGlobal
      meta(name="keywords" content=metaKeywordsGlobal)
    else if metaKeywordsPage
      meta(name="keywords" content=metaKeywordsPage)

    //- Keep page title under 50 to 60 characters
    block title
      title #{pageTitle} - #{websiteTitle}

    //- Sitemap link
    link(href=deployUrl + "sitemap.xml" rel="sitemap" type="application/xml" title="Sitemap")

    //- Canonical link
    link(href=absoluteUrl rel="canonical")


    //----------------------------------------------
    //- Social media meta tags
    //----------------------------------------------
    
    //- Open Graph (facebook)
    meta(property="og:type", content="website")
    meta(property="og:url", content=absoluteUrl)
    meta(property="og:title", content=pageTitle + " - " + websiteTitle)
    meta(property="og:description", content=metaDescription)
    meta(property="og:image", content=deployUrl + "img/social-share.png")

    //- Twitter
    meta(name="twitter:card" content="photo")
    meta(name="twitter:url" content=absoluteUrl)
    meta(name="twitter:title" content=pageTitle + " - " + websiteTitle)
    meta(name="twitter:description" content=metaDescription)
    meta(name="twitter:image" content=deployUrl + "img/social-share.png")


    //----------------------------------------------
    //- Include favicons links
    //----------------------------------------------
    include ../includes/icons


    //----------------------------------------------
    //- CSS links
    //----------------------------------------------
    link(href=baseUrl + "assets/style.min.css" rel="stylesheet" type='text/css')

    //----------------------------------------------
    //- JS head links
    //----------------------------------------------
    script(src=baseUrl + "assets/head.min.js")


  //----------------------------------------------
  //- Body
  //----------------------------------------------
  body
    block content

  //----------------------------------------------
  //- JS body links
  //----------------------------------------------
  script(src=baseUrl + "assets/body.min.js")
